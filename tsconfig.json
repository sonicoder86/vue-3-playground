{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "pretty": true,
    "removeComments": true,
    "rootDir": "./",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "exclude": ["./node_modules"]
}
